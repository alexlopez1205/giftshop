<div ng-app="giftshop">
    <div ng-controller="ProductController">
        <form novalidate name="frmProduct" id="frmProducts" class="form-horizontal row-border">
            <br />
            <div class="col-md-12">
                <div class="form-group">
                    <label class="col-md-4 control-label" for=""> Product name</label>
                    <div class="col-md-7">
                        <input type="text"
                               id="idProdName"
                               class="form-control"
                               name="productname" ng-model="product" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label" for=""> Description</label>
                    <div class="col-md-7">
                        <input type="text"
                               id="idProdDesc"
                               class="form-control"
                               name="productdescription" ng-model="desc" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label" for=""> SKU</label>
                    <div class="col-md-7">
                        <input type="text"
                               id="idProdSku"
                               class="form-control"
                               name="productsku" ng-model="sku" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label" for=""> Price</label>
                    <div class="col-md-7">
                        <input type="text"
                               id="idProdPrice"
                               class="form-control"
                               name="productprice" ng-model="price" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-4">
                    </div>
                    <div class="col-md-7">
                        <span id="save" class="btn btn-success margin-right-btn" ng-click="SaveUpdate()">
                            <i class="icon-save"></i> {{btnText}}
                        </span>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
            <hr />

            <table class="table table-hover general-table">
                <thead class="grid-top-panel">
                    <tr>
                        <th style="display:none">ProductID</th>
                        <th>Product</th>
                        <th>Description</th>
                        <th>SKU</th>
                        <th>Price</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="dataModel in products">
                        <td style="display:none">{{dataModel.idproduct}}</td>
                        <td> {{dataModel.product}}</td>
                        <td>{{dataModel.description}}</td>
                        <td>{{dataModel.sku}}</td>
                        <td>{{dataModel.price}}</td>
                        <td style="text-align:right; color:white">
                            <span>
                                <span id="save" class="btn btn-primary margin-right-btn" ng-click="GetProductByID(dataModel)">
                                    Edit
                                </span>
                            </span>
                        </td>
                        <td style="text-align:right; color:white">
                            <span>
                                <span id="save" class="btn btn-danger margin-right-btn" ng-click="DeleteProduct(dataModel)">
                                    Delete
                                </span>
                            </span>
                        </td>
                    </tr>
                </tbody>
                <tfoot></tfoot>
            </table>



            <br />
            <br />
        </form>
    </div>
</div>
<script src="~/Scripts/Events.js"></script>