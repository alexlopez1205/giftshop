@model giftshop.Models.LoginPageViewModel
@{
    ViewBag.Title = "Login";
}
@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "login-form" }))
{
    //@Html.AntiForgeryToken()
    <h3 class="form-title">Sign Up</h3>

    <div class="form-group">
        @Html.ValidationMessageFor(x => x.Username)<br />
        <label class="control-label visible-ie8 visible-ie9" style="color:#000">User</label>
        @Html.TextBoxFor(x => x.Username, new { @class = "form-control form-control-solid placeholder-no-fix", @tabindex = "1", @placeholder = "" })
    </div>
    <div class="form-group">
        @Html.ValidationMessageFor(x => x.Password)<br />
        <label class="control-label visible-ie8 visible-ie9" style="color:#000">Password</label>
        @Html.PasswordFor(x => x.Password, new { @class = "form-control form-control-solid placeholder-no-fix", @tabindex = "2", @placeholder = "" })

    </div>
    <div class="form-actions" >
        <button type="submit" class="btn btn-success uppercase" style="background-color: #cb5a5e; border-color: #cb5a5e; ">Ingresar</button>
    </div>
}
